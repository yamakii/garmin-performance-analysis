{
  "mcpServers": {
    "garmin-db": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "packages/garmin-mcp-server",
        "garmin-mcp-server"
      ],
      "env": {
        "MCP_RESTART_TRIGGER": "2026-02-15"
      }
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena-mcp-server",
        "--context",
        "agent"
      ]
    }
  }
}
