{
  "mcpServers": {
    "garmin": {
      "command": "uv",
      "args": [
        "--directory",
        "/home/yamakii/workspace/claude_workspace/garmin_mcp",
        "run",
        "garmin-mcp"
      ]
    },
    "garmin-db": {
      "command": "uv",
      "args": [
        "run",
        "python",
        "servers/garmin_db_server.py"
      ]
    },
    "json-utils": {
      "command": "uv",
      "args": [
        "run",
        "python",
        "servers/json_server.py"
      ]
    },
    "markdown-utils": {
      "command": "uv",
      "args": [
        "run",
        "python",
        "servers/markdown_server.py"
      ]
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena-mcp-server"
      ]
    }
  }
}
